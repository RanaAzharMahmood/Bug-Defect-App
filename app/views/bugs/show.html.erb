<h1> Bug Details </h1>

<div class="card ">
  <div class="card-header">
    <b>Bug title is :   </b><%=  @bug.title %>
  </div>
  <div class="card-body">
    <h5 class="card-title"></h5>
    <p class="card-text">
    <%= "Description: "+@bug.description %>
    </p>
    <p class="card-text">
    <%= "Type: "+@bug.bug_type %>
    </p>
    <p class="card-text">
    Status : &nbsp<b><%= @bug.status.capitalize %></b>
    </p>
    
    <p class="card-text">
    Deadline :&nbsp
    <%= @bug.deadline %>
    </p>
    <% if @bug.image? %>
    <p class="card-text">
    Image :&nbsp
    <%= image_tag @bug.image.url(:thumb) %>
    </p>
    <% else %>
      <p class="card-text">  Image : Nothing Found here</p>
    <% end %>
    <% if can? :update , @bug %>
    <%= link_to "Edit Bug Details",edit_bug_path(@bug),class: "btn btn-primary"%>
     <%= link_to "Delete This Bug/Features",bug_path(@bug),method: :delete,data: {confirm: "Are you sure"},class: "btn btn-danger"%>
     <% end %>
    <%= link_to "Back to List", project_path(@bug.project) , class: "btn btn-warning"%>
  </div>
</div>
