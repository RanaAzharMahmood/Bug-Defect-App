<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#removeButton">
      Remove a Person
</button>
<div class="modal fade" id="removeButton" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Select Person to remove</h5>

        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true"></span>
        </button>
      
      </div>
      <div class="modal-body">

    <%= form_for(@project, :html => {class: "form-horizontal", role: "form", method: :delete}) do |f| %>
    <% if @project.users.present? %>

		<%= select(:user, "user_id", @project.users.collect {|p| [ "Person: "+p.name, p.id ] }, :prompt => 'Select a Person to remove') %>
    <%= f.submit  class: "btn btn-md btn-warning",value: "Delete User"%>

    <% else %>
      <p> No member is available</p>
    <% end %>
    <% end %>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
      </div>
    </div>
  </div>
</div>
    