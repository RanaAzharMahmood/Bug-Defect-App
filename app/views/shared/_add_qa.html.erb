<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#qaAdder">
      Add a QA
</button>
<div class="modal fade" id="qaAdder" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Select QA to add</h5>

        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true"></span>
        </button>
      
      </div>
      <div class="modal-body">
        <% qa_present %>

    <%= form_for(@project, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <% if @user_present.present? %>

		<%= select(:user, "user_id", @user_present.collect {|p| [ "SQA Person: "+p.name, p.id ] }, :prompt => 'Select a QA'   ) %>
    <%= f.submit class: "btn btn-md btn-warning"%>

    <% else %>
      <p> No QA member is available</p>
    <% end %>
    <% end %>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
      </div>
    </div>
  </div>
</div>
    